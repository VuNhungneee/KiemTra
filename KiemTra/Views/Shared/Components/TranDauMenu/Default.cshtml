@model IEnumerable<Trandau>

        @foreach (var item in Model.Take(7))
        {
            var getUrl = "https://localhost:7085/api/TrongTai/" + item.TranDauId.Trim();
            <li><a style="cursor:pointer" onclick="showTrongTaiByTranDau('@getUrl')">@item.TranDauId</a></li>
        }



<script>
    function showTrongTaiByTranDau(getUrl) {
        var str = '';
        $.ajax({
            type: 'GET',
            url: getUrl,
            dataType: 'json',
            success: function (data) {
                $.each(data, function (key, val) {
                    str += '<li class="span3">';
                    str += '    <div class="product-box">';
                    var linkImage = "../Images/" + $.trim(val.anh);
                    str += '       <p><a href="product_detail.html"><img src="' + linkImage + '" alt="" style="height:400px;width:400px"></a></p>';
                    str += '       <a href="#" onclick="suaCauThu(\'' + $.trim(val.cauThuId) + '\')" class="title">' + $.trim(val.hoVaTen) + ')</a><br>';
                    str += '           <a href="products.html" class="category">' + $.trim(val.viTri) + '</a>';
                    str += '           <p class="price">' + $.trim(val.tranDauId) + '</p>';
                    str += '    </div>';
                    str += '  </li>';

                   
                });
                $('#displayCauThu').html(str);
            },
            error: function (xhr) {
                alert(xhr.responseText);
            }
        });
    }
    function suaCauThu(cauthuid) {
        if (confirm('Bạn có chắc chắn muốn sửa cầu thủ này?')) {
            window.location.href = '/SuaCauThu?cauthuid=' + cauthuid;
        }
    }
</script>


































